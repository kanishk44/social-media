# Application
NODE_ENV=development
PORT=8080

# Database
# For local PostgreSQL:
DATABASE_URL=postgresql://user:password@localhost:5432/social_media?schema=public

# For Supabase with Session Pooler (runtime queries):
# DATABASE_URL=postgresql://postgres.xxxx:[PASSWORD]@aws-1-us-east-1.pooler.supabase.com:5432/postgres?pgbouncer=true&connection_limit=1

# For Supabase Direct Connection (migrations - requires IPv6):
# Use this for migrations if you have IPv6 support:
# DATABASE_URL=postgresql://postgres:[PASSWORD]@db.xxxx.supabase.co:5432/postgres

# JWT
JWT_SECRET=change-me-to-a-secure-random-string
JWT_TTL=15m

# Supabase Storage (for media uploads)
SUPABASE_URL=https://<project>.supabase.co
SUPABASE_SERVICE_ROLE_KEY=<service-role-key-from-supabase-dashboard>
SUPABASE_BUCKET=media

# CORS
CORS_ORIGIN=http://localhost:5173

